.header-slider
    &__item
        height 100%
        background-size cover
        background-repeat no-repeat
        background-position center
        text-align left
        position relative
        font-size 30px

        @media (min-width 768px)
            font-size 34px

        @media (min-width 992px)
            font-size 38px

        @media (min-width 1200px)
            font-size 44px

    .container
        height 100%
        position relative

    &__bg
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        background-color rgba(0, 0, 0, 0.5)

    &__content
        position absolute
        left 0
        bottom 0
        padding-left 30px
        padding-right 30px
        padding-bottom 80px

    &__title
        font-size .8em
        margin-bottom .73em
        max-width 700px

        h2
            margin-top 0
            margin-bottom 0
            letter-spacing .12em
            text-transform uppercase
            font-family Times New Roman, Gilroy, Trebuchet MS, Helvetica, verdana
            font-weight 300
            text-shadow 0 0 5px rgba(35, 35, 38, 0.7)
            font-size inherit

    &__text
        font-family Befindisa
        font-size 1.4em
        letter-spacing .1em
        text-shadow 0 0 5px rgba(35, 35, 38, 0.7)
        margin-bottom 0.6em

    &__btn
        {ibt}
        padding 1em 4.2em
        border 2px solid white
        text-transform uppercase
        font-size .4em
        letter-spacing .1em
        color white
        text-decoration none
        text-shadow 0 0 5px rgba(35, 35, 38, 0.7)
        transition all .5s ease

        &:hover
            background-color rgba(255, 255, 255, 0.2)

    .slick-list, .slick-track, .slick-slide, .slick-slide > div
        height 100%

    .slick-dots
        bottom 6.5%

        li
            height 16px
            width 16px
            border-radius 50%

        button
            background-color rgba(255, 255, 255, 0.3)
            font-size 0
            height 16px
            width 16px
            border-radius 50%
            transition all .3s ease

            &:hover
                background-color rgba(255, 255, 255, 0.5)

            &:before
                display none

        .slick-active
            button
                background-color rgba(255, 255, 255, .8)

    .slick-arrow
        height 50px
        width 50px
        transition all .3s ease
        opacity .7

        &:before
            display none

        &:after
            content ''
            display block
            width 15px
            height 15px
            position absolute
            border 1px solid white
            border-top none
            border-right none
            top 50%
            left 50%

        &:hover
            opacity 1

    .slick-next
        right 0
        border-left none
        border-bottom none

        @media (min-width 1450px)
            right 7%

        &:after
            transform translate(-70%, -50%) rotate(-135deg)

    .slick-prev
        left 0
        z-index 1
        border-right none
        border-top none

        @media (min-width 1450px)
            left 7%

        &:after
            transform translate(-30%, -50%) rotate(45deg)
