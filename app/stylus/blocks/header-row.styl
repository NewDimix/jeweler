.header-row
    position relative
    font-size 0
    height 80px
    text-align left

    @media (min-width 600px)
        height 100px

    &__left-content
        width 20%
        text-align left
        padding-top 23px
        display none

        @media (min-width 600px)
            {ibt}
            width 25%
            padding-top 15px

    &__phone
        a
            color $gold-color
            font-size 14px
            letter-spacing .07em
            line-height 35px
            text-decoration none
            opacity .75
            transition all .1s ease
            display none

            @media (min-width 600px)
                {ibm}
                font-size 15px

            @media (min-width 768px)
                font-size 16px
                letter-spacing .1em

            @media (min-width 860px)
                font-size 18px
                letter-spacing .12em

            &:hover, &:focus
                opacity 1
                text-decoration underline
                outline none

    &__logo
        {ibt}
        width 60%
        text-align center

        @media (min-width 600px)
            width 50%

    &__right-content
        float left
        width 20%
        text-align left
        padding-top 23px
        padding-left 12%

        @media (min-width 600px)
            {ibt}
            width 25%
            float none
            padding-top 33px
            text-align right
            padding-left 0

    &__social
        display none

        @media (min-width 600px)
            {ibm}

    &__favorites
        {ibm}
        position relative

        a
            {ibm}
            font-size 0
            width 30px
            height 35px
            background-image inline('shopping-cart.png')
            background-size contain
            background-position center
            background-repeat no-repeat
            opacity .75
            transition all .1s ease
            text-decoration none

            @media (min-width 860px)
                width 38px
                height 35px

            &:hover, &:focus
                opacity 1

            &:focus
                outline none
                box-shadow 0 0 0 1px $gold-color

        span
            line-height 28px
            width 28px
            background-color #fff
            font-size 15px
            font-family Gilroy
            display block
            text-align center
            color $dark-color
            border-radius 50%
            position absolute
            left -30px
            top -15px

