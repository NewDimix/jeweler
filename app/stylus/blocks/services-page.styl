.services-page
    &__title
        margin-bottom 2.31em
        text-align center
        text-transform uppercase
        color $gold-color
        font-size 26px

        @media (min-width 768px)
            font-size 31px

        @media (min-width 992px)
            font-size 36px

        h2
            margin-top 0
            margin-bottom 0
            letter-spacing .14em
            font-weight 400
            font-size inherit

    &__link
        font-size 18px
        text-transform uppercase
        font-weight 300
        margin-top 2em
        text-align center

        @media (min-width 820px)
            margin-top 3em

        @media (min-width 992px)
            margin-top 3.9em

        a
            {ibm}
            color $gold-color
            text-decoration none
            border 1px solid $gold-color
            padding-left 2.8em
            padding-right 2.8em
            letter-spacing .12em
            line-height 3.3em
            transition all .5s ease

            &:hover
                background-color rgba(143, 127, 106, 0.1)

    &__item
        &:first-child
            .services-page__title
                text-align center

                @media (min-width 992px)
                    text-align left

            .services-page__img
                @media (min-width 992px)
                    margin-left 60px
                    float right

            .services-page__content
                text-align left

        &:nth-child(2)
            .services-page__title
                text-align center

                @media (min-width 992px)
                    text-align right

            .services-page__img
                @media (min-width 992px)
                    float left
                    margin-right 60px

            .services-page__content
                text-align left

        &:not(:last-child)
            margin-bottom 90px

    &__content
        p
            color white
            opacity .8
            font-size 20px
            letter-spacing .12em

        ul, ol
            padding-left 1em
            font-size 20px
            letter-spacing .12em
            margin-top 30px
            margin-bottom 30px
            text-align left
            opacity .8

            li
                &:not(:last-child)
                    margin-bottom 10px

        ul
            li
                position relative

        h3
            margin-bottom 1em
            margin-top 2em
            text-transform uppercase
            color $gold-color
            font-size 23px
            font-weight 400

            @media (min-width 768px)
                font-size 28px

            @media (min-width 992px)
                font-size 32px

        h4
            margin-bottom .5em
            margin-top 1em
            color $gold-color
            font-size 21px
            font-weight 400

            @media (min-width 768px)
                font-size 25px

            @media (min-width 992px)
                font-size 28px

    &__img
        position relative
        display block
        margin-bottom 40px

        &:before
            content ''
            display none
            position absolute
            left 35px
            top -35px
            right 35px
            bottom -35px
            border 1px solid $gold-color

            @media (min-width 992px)
                display block

        img
            display block
            margin-left auto
            margin-right auto
            width 100%
            max-width 600px
