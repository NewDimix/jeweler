.catalog-page
    &__filter
        margin-bottom 90px

    &__quantity
        margin-bottom 50px
        font-size 18px
        letter-spacing .14em
        text-transform uppercase
        color $gold-color
        text-align center

    &__content
        margin-bottom 90px

        .grid
            min-height 392px
            padding-top 5px
            padding-bottom 5px
            position relative

    &__empty
        font-size 20px
        text-transform uppercase
        text-align center
        padding-top 100px
        padding-bottom 100px
        font-weight 300
        letter-spacing .12em
        opacity .6

    &__load_button
        font-size 18px
        text-transform uppercase
        font-weight 300
        margin-top 2em
        text-align center

        @media (min-width 820px)
            margin-top 3em

        @media (min-width 992px)
            margin-top 3.9em

        button
            {ibm}
            color $gold-color
            text-decoration none
            border 1px solid $gold-color
            padding-left 1.8em
            padding-right 1.8em
            letter-spacing .12em
            line-height 2.3em
            transition all .5s ease
            background transparent
            cursor pointer

            &:hover
                background-color rgba(143, 127, 106, 0.1)

            &:focus
                outline none
                background-color rgba(143, 127, 106, 0.1)

.upload_loader
    position absolute
    height 100%
    width 100%
    left 0
    top 0
    background-color $dark-color
    z-index 20

    img
        position absolute
        left 50%
        top 50px
        transform translateX(-50%)
