.team-page
    &__title
        font-size 28px
        letter-spacing .14em
        text-transform uppercase
        text-align center
        margin-bottom 40px

        h2
            font-size inherit
            font-weight 400
            margin-top 0
            margin-bottom 0

        &+hr
            width 38px
            height 2px
            border none
            background-color white
            opacity .7
            margin-bottom 20px

    &__title2
        font-size 28px
        letter-spacing .05em
        text-transform uppercase
        color $gold-color
        margin-bottom 25px

        h2
            font-size inherit
            font-weight 300

        &+hr
            border none
            background-color $gold-color
            height 1px
            margin-bottom 40px

    &__subtitle
        max-width 440px
        margin-left auto
        margin-right auto
        text-align center
        font-size 16px
        letter-spacing .05em
        font-weight 300
        opacity .8
        margin-bottom 60px

    &__person
        display block
        position relative
        text-decoration none
        padding-left 9px
        padding-right 9px
        margin-bottom 60px
        max-width 500px
        margin-left auto
        margin-right auto

        @media(min-width 700px)
            margin-bottom 80px

        @media(min-width 992px)
            max-width none
            padding-left 0
            padding-right 0
            display block
            width 100%
            margin-bottom 110px

        &:hover
            .collections__gold-img
                transform translate(-50%, -50%) scale(1.075)

            hr
                transform scaleX(5)

        hr
            margin-bottom 20px

            @media(min-width 992px)
                margin-bottom 27px

    &__person-border
        display none

        @media(min-width 992px)
            position absolute
            left -20px
            right -20px
            top -20px
            bottom -20px
            display block
            border 1px solid $gold-color
            z-index 1
            margin-right 480px

    &__person-img-wrap
        height 337px
        position relative
        overflow hidden

        @media(min-width 992px)
            height 350px
            margin-right 480px

    &__person-img
        position absolute
        width 100%
        height 100%
        left 50%
        top 50%
        transform translate(-50%, -50%)
        background-image url(../img/person-img.jpg)
        background-position top center
        background-size cover
        background-repeat no-repeat
        transition all .7s ease

    &__person-content-wrap
        background-color $gold-color
        padding-left 1em
        padding-right 1em
        text-align center

        @media(min-width 992px)
            font-size 63px
            position absolute
            right 0
            top 0
            width 480px
            height 100%

    &__person-content
        padding-top 10px
        padding-bottom 10px
        width 100%
        padding-left 20px
        padding-right 20px

        @media(min-width 992px)
            padding-left 0
            padding-right 0
            width 80%
            padding-top 0
            padding-bottom 0
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)

    &__person-title
        font-size 36px
        color white
        letter-spacing .14em
        text-transform uppercase
        margin-bottom .7em

        @media(min-width 992px)
            margin-bottom .5em

    &__person-post
        font-weight 300
        font-size 18px
        margin-bottom 1.9em

    &__person-text
        font-size 18px
        letter-spacing .05em
        color white
        font-weight 300

    &__columns
        font-weight 300
        font-size 18px
        opacity .8

        @media (min-width 768px)
            column-count 2
