.article
    display block
    font-size 20px
    text-decoration none
    border 1px solid rgba(26, 26, 26, .5)
    box-shadow 0 0 10px 0px rgba(0, 0, 0, .1)
    transition all .4s ease
    background-color #29292d
    border-radius 3px
    overflow hidden
    max-width 450px
    margin-left auto
    margin-right auto

    &:hover
        box-shadow 0 0 30px 0px rgba(0, 0, 0, .3)
        border 1px solid rgba(26, 26, 26, 1)
        transform scale(1.02)

    &__img
        height 220px

    &__content
        padding 20px 25px
        text-align left
        color white
        letter-spacing .12em

    &__date
        font-size 16px
        font-weight 300
        margin-bottom 20px

    &__title
        font-size 20px
        text-transform uppercase
        margin-bottom 20px

        h2
            margin-top 0
            margin-bottom 0
            font-size inherit
            font-weight 400
            height 70px

    &__text
        font-size 16px
        font-weight 300

        p
            height 180px
