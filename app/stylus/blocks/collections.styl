.collections
    text-align center
    font-size 0

    hr
        height 3px
        width 15%
        background-color white
        border none
        transition all .7s ease

    &__text
        font-size 18px
        letter-spacing .05em
        color white
        font-weight 300

        @media(min-width 992px)
            height 150px

    &__item
        display block
        padding-left 9px
        padding-right 9px
        text-decoration none
        margin-bottom 20px
        max-width 600px
        margin-left auto
        margin-right auto

        @media(min-width 992px)
            {ibt}
            width 33%

        &:hover, &:focus
            outline none

            .collections__img
                transform translate(-50%, -50%) scale(1.075)

            hr
                transform scaleX(5)

        hr
            margin-bottom 20px

    &__img-wrap
        height 337px
        position relative
        overflow hidden

    &__img
        background-position center
        background-size cover
        background-repeat no-repeat
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        width 100%
        height 100%
        transition all .7s ease

        &_gold
            background-image url(../img/gold-bg.jpg)

        &_silver
            background-image url(../img/silver-bg.jpg)

        &_luxury
            background-image url(../img/luxury-bg.jpg)

        &_man
            background-image url(../img/man-bg.jpg)

    &__content
        padding-top 28px
        padding-bottom 30px
        background-color $gold-color
        padding-left 10%
        padding-right 10%

    &__title
        font-size 24px
        letter-spacing .14em
        color white
        text-transform uppercase
        margin-bottom .9em

        h3
            margin-top 0
            margin-bottom 0
            font-weight 400

    .mCS-dark.mCSB_scrollTools .mCSB_dragger .mCSB_dragger_bar
        background-color rgba(0, 0, 0, 0.4)
