.product
    font-size 20px
    border 1px solid rgba(26, 26, 26, .5)
    background-color $dark-color
    padding-top 50px
    padding-bottom 36px
    box-shadow 0 0 10px 0px rgba(0, 0, 0, .1)
    display block
    text-decoration none
    transition all .4s ease
    position relative

    &:hover
        box-shadow 0 0 30px 0px rgba(0, 0, 0, .3)
        border 1px solid rgba(26, 26, 26, 1)
        transform scale(1.02)

    &__img
        height 150px
        text-align center
        position relative
        margin-bottom 35px

        img
            max-height 100%
            width auto
            height auto
            max-width 80%
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)

    &__title
        font-size 12px
        letter-spacing .12em
        text-transform uppercase
        opacity .6
        margin-bottom 2em
        padding-left 25px
        padding-right 25px
        white-space 30px
        line-height 1.8em
        color white

        h3
            margin-top 0
            margin-bottom 0
            font-weight 300
            height 65px

    &__price
        color $gold-color
        font-size 18px
        height 30px

        span
            &:after
                content ' Ñ€.'

    &__sale
        background-color $gold-color
        line-height 50px
        text-align center
        width 50px
        border-radius 50%
        position absolute
        top 15px
        right 15px
        letter-spacing .12em
        font-size 14px
        color $dark-color

    &.sale
        .product__price
            span
                &:nth-child(1)
                    font-size 14px
                    text-decoration line-through
                    opacity .6
                    display block
                    margin-bottom 5px
