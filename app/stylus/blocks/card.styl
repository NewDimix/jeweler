.card
    background-color $dark-color
    padding 45px 45px 5px 45px
    margin-left auto
    margin-right auto
    font-size 0
    transition all 1s ease

    &__img
        margin-bottom 30px

        @media (min-width 768px)
            {ibm}
            width 45%
            margin-right 10%
            margin-bottom 0

        .card__title
            display block
            margin-bottom 30px
            padding-left 30px
            padding-right 30px

            @media (min-width 768px)
                display none

    &__sale
        background-color $gold-color
        line-height 60px
        text-align center
        width 60px
        border-radius 50%
        position absolute
        top 15px
        left 25px
        letter-spacing .12em
        font-size 20px
        color $dark-color

        @media (min-width 768px)
            line-height 100px
            width 100px
            font-size 26px
            top 25px
            left 35px

    &__photo-item
        img
            display block
            max-width 80%
            max-height 80%
            margin-left auto
            margin-right auto

    &__photo-slider
        margin-bottom 20px

        .card__photo-item
            height 370px
            position relative

            @media (min-width 768px)
                height 300px

            @media (min-width 992px)
                height 350px

            @media (min-width 1200px)
                height 420px

            img
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)

        &:before
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            border 1px solid $gold-color
            opacity .5

    &__photo-nav
        position relative

        .card__photo-item
            height 120px
            position relative

            img
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)

        &:before
            content ''
            position absolute
            left 50%
            top 10px
            width 20%
            height 100%
            border-bottom 1px solid $gold-color
            opacity .5
            transform translateX(-50%)

    &__content
        font-size 20px
        text-align center

        @media (min-width 768px)
            {ibm}
            width 45%

        button
            width 100%
            background-color $gold-color
            border 1px solid $gold-color
            padding-top 20px
            padding-bottom 20px
            color white
            font-weight 300
            font-size 16px
            letter-spacing .12em
            text-transform uppercase
            cursor pointer
            transition all .2s ease

            &:hover
                background-color #a7947a

        .card__title
            display none

            @media (min-width 768px)
                display block

    &__title
        font-size 28px
        color $gold-color
        letter-spacing .12em
        text-transform uppercase

        h1
            font-size inherit
            margin-top 0
            margin-bottom 0
            font-weight 400

    &__code
        opacity .3
        letter-spacing .08em
        font-size 12px
        margin-top 30px

    &__section
        padding-bottom 12px
        padding-top 17px

        &:not(:last-child)
            border-bottom 1px solid rgba(255, 255, 255, 0.2)

        span
            font-size 26px
            color $gold-color

        &_price
            span
                &:after
                    content ' Ñ€.'

    &__subtitle
        color white
        opacity .2
        text-transform uppercase
        font-size 16px
        letter-spacing .12em
        margin-bottom 15px

        h2
            margin-top 0
            margin-bottom 0
            font-size inherit
            font-weight 300

    &__footer
        padding-top 30px
        font-size 0
        border-top 1px solid rgba(255, 255, 255, .4)
        margin-top 35px

    &__footer-item
        @media (min-width 768px)
            {ibm}
            width 48%

        &:nth-child(2n)
            margin-right 4%

        &:not(:last-child)
            margin-bottom 30px

            @media (min-width 768px)
                margin-bottom 0

        &_time
            p
                &:before
                    background-image inline('time-icon.png')

        &_metal
            p
                &:before
                    background-image inline('metal-icon.png')

        p
            {ibt}
            font-size 18px
            position relative
            padding-left 57px
            color #898989

            &:before
                content ''
                width 32px
                height 32px
                background-size contain
                background-position center
                background-repeat no-repeat
                position absolute
                left 0
                top 50%
                transform translateY(-50%)

    &__form
        font-size 0
        display none
        margin-bottom 40px
        text-align left

        button
            font-size 20px
            border none
            padding 22px
            width 40px
            cursor pointer
            transition all .2s ease
            text-transform uppercase
            background-color transparent
            position relative
            margin-bottom 30px

            &:hover, &:focus
                outline none
                transform scale(1.1)

    &__arrow-wrap
        padding 20px

    &__arrow
        cursor pointer
        height 2px
        width 100%
        background-color $menu-icon-bgc
        position absolute
        left 0
        top 50%
        transform translateY(-50%)
        box-shadow none

        &:before, &:after
            cursor pointer
            height 2px
            width 15px
            background-color $menu-icon-bgc
            position absolute
            display block
            content ''
            transition all .2s ease .2s, transform .2s ease 0s

        &:before
            top 0
            transform translateX(-1px) translateY(6px) rotate(45deg)
            box-shadow none

        &:after
            bottom 0
            transform translateX(-1px) translateY(-6px) rotate(-45deg)
            box-shadow none

    &.sale
        .card__section_price
            span
                &:nth-of-type(1)
                    font-size 20px
                    text-decoration line-through
                    opacity .6
                    display block
                    margin-bottom 10px

    .slick-arrow
        height 50px
        width 50px
        transition all .3s ease
        opacity .7

        &:before
            display none

        &:after
            content ''
            display block
            width 15px
            height 15px
            position absolute
            border 1px solid white
            border-top none
            border-right none
            top 50%
            left 50%

        &:hover
            opacity 1

    .slick-next
        right -45px
        border-left none
        border-bottom none

        &:after
            transform translate(-70%, -50%) rotate(-135deg)

    .slick-prev
        left -45px
        z-index 1
        border-right none
        border-top none

        &:after
            transform translate(-30%, -50%) rotate(45deg)

.slick-slide
    outline none
