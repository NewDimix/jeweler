.about
    text-align center

    &__border
        position absolute
        left 20px
        right 20px
        top -20px
        bottom -20px
        display block
        border 1px solid $gold-color
        transition all .3s ease

    &__videos-wrap
        text-align center

    &__videos-item
        position relative
        height (210.9375/1.4)px
        width (375/1.4)px
        overflow visible
        background-color $dark-color
        transition all 1s ease
        margin-left auto
        margin-right auto

        @media (min-width 480px)
            height (210.9375*1.2)px
            width (375*1.2)px

        @media (min-width 768px)
            height (210.9375*1.5)px
            width (375*1.5)px

        @media (min-width 1100px)
            height (210.9375*1.9)px
            width (375*1.9)px

        &:focus
            outline none

        &:hover
            .about__border
                opacity 0
                transform scale(1.2)

    &__youtube
        background-position center
        background-repeat no-repeat
        background-size cover
        position relative
        display inline-block
        overflow hidden
        transition all 200ms ease-out
        cursor pointer
        width inherit
        height inherit

    &__play
        background inline('play-icon.svg') no-repeat
        background-position center
        background-size 12%
        position absolute
        height 100%
        width 100%
        opacity .7
        transition all 0.2s ease-out
        transform scale(.9)

        &:hover
            opacity 1
            transform scale(1)
