.cart
    background-color $dark-color
    padding 20px
    margin-left auto
    margin-right auto
    font-size 0
    text-align left

    @media (min-width 768px)
        padding 25px

    @media (min-width 992px)
        padding 35px

    @media (min-width 1200px)
        padding 45px

    &__title
        font-size 26px
        letter-spacing .14em
        text-transform uppercase
        color $gold-color
        text-align left

        h1
            margin-top 0
            margin-bottom 0
            font-size inherit
            font-weight 400

    &__products
        margin-bottom 45px

    &__item
        position relative
        padding-top 35px
        padding-bottom 35px
        border-bottom 1px solid rgba(255, 255, 255, 0.4)
        padding-right 60px

        @media (min-width 768px)
            padding-top 40px
            padding-bottom 40px

        @media (min-width 992px)
            padding-top 50px
            padding-bottom 50px

        @media (min-width 1200px)
            padding-top 60px
            padding-bottom 60px

        &.sale
            .cart__price
                span
                    &:nth-of-type(1)
                        font-size 18px
                        text-decoration line-through
                        opacity .6
                        margin-right 10px
                        margin-bottom 10px

    &__img
        {ibm}
        width 35%
        margin-right 5%
        position relative
        height 100px

        @media (min-width 768px)
            width 25%

        img
            {ibt}
            max-width 100%
            max-height 100%
            position absolute
            left 0
            top 0

    &__item-info
        {ibm}
        width 60%

        @media (min-width 768px)
            width 70%

    &__item-title
        font-size 18px
        text-transform uppercase
        margin-bottom 20px
        letter-spacing .12em

        h2
            font-size inherit
            font-weight 300
            margin-top 0
            margin-bottom 0

        a
            color white
            text-decoration none

            &:hover
                text-decoration underline

    &__price
        font-size 22px
        letter-spacing .04em
        color $gold-color

        span
            &:after
                content ' р.'

    &__btn
        position absolute
        right 0
        top 32px
        font-size 30px
        width 30px
        height 30px

        @media (min-width 768px)
            top 35px

        @media (min-width 992px)
            top 45px

        @media (min-width 1200px)
            top 57px

        button
            width 30px
            height 30px
            background transparent
            border none
            font-size 0
            position absolute
            top 0
            left 0
            cursor pointer

            &:before
                content ''
                position absolute
                width 100%
                height 1px
                background-color rgba(255, 255, 255, 0.7)
                top 50%
                left 0
                transform translateY(-50%) rotate(45deg)
                transition all .2s ease

            &:after
                content ''
                position absolute
                width 100%
                height 1px
                background-color rgba(255, 255, 255, 0.7)
                top 50%
                left 0
                transform translateY(-50%) rotate(-45deg)
                transition all .2s ease

            &:hover
                &:before
                    background-color rgba(255, 255, 255, 1)

                &:after
                    background-color rgba(255, 255, 255, 1)

    &__total
        font-size 24px
        text-align right
        text-transform uppercase
        letter-spacing .12em
        opacity .6
        font-weight 300

        span
            {ibm}

            &:first-child
                font-size 18px
                margin-right 50px

            &:nth-child(2)
                text-transform lowercase

                &:after
                    content ' р.'

    &__empty
        font-size 20px
        text-transform uppercase
        text-align center
        padding-top 100px
        padding-bottom 100px
        font-weight 300
        letter-spacing .12em
        opacity .6

