.logo
    {ibt}
    text-align center
    width 400px
    padding-top 12px
    padding-bottom 12px
    background-color $dark2-color
    box-shadow 0 0 10px 0px rgba(0, 0, 0, .1)
    transition all .5s ease
    max-width 100%

    @media (min-width 600px)
        width 230px

    @media (min-width 830px)
        width 240px

    @media (min-width 1245px)
        width 400px
        padding-top 17px
        padding-bottom 18px

    &:hover, &:focus
        box-shadow 0 0 40px 0px rgba(0, 0, 0, .3)
        outline none

    img
        {ibm}
        width 80%
