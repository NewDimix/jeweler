.contacts-page
    font-size 0

    &__title
        font-size 28px
        letter-spacing .12em
        margin-bottom 20px
        text-transform uppercase

        @media (min-width 820px)
            margin-bottom 30px

        @media (min-width 992px)
            margin-bottom 40px

        @media (min-width 1200px)
            margin-bottom 50px

        h2
            font-size inherit
            margin-top 0
            margin-bottom 0
            font-weight 300

    &__item-title
        font-size 16px
        letter-spacing .12em
        margin-bottom 25px
        text-transform uppercase

        h3
            font-size inherit
            font-weight 300

    &__content
        margin-bottom 40px

        @media (min-width 820px)
            margin-bottom 55px

        @media (min-width 992px)
            margin-bottom 65px

        @media (min-width 1200px)
            margin-bottom 85px

    &__item
        {ibt}
        width 48%
        margin-right 4%
        margin-bottom 30px

        @media (min-width 992px)
            width 23.5%
            margin-right 2%
            margin-bottom 0

        &:nth-child(2n)
            margin-right 0

            @media (min-width 992px)
                margin-right 2%

        &:last-child
            margin-right 0

            @media (min-width 992px)
                margin-right 0

    &__item-text
        font-size 18px
        letter-spacing .12em
        text-transform uppercase
        color $gold-color

    &__form
        font-size 0

    &__form-left
        @media (min-width 768px)
            {ibt}
            width 58%
            margin-right 2%

        textarea
            height 270px

    &__form-right
        @media (min-width 768px)
            {ibt}
            width 40%

    #map
        width 100%
        height 480px
        margin-top 40px

        @media (min-width 820px)
            margin-top 55px

        @media (min-width 992px)
            margin-top 65px

        @media (min-width 1200px)
            margin-top 85px
