.filter
    font-size 0
    width 100%

    &__price
        margin-bottom 30px

        input
            background-color $dark-color
            color white
            font-family Futura
            border 1px solid #888
            font-size 14px
            font-weight 300
            padding 8px 10px
            letter-spacing .10em
            width 185px

    &__border
        position absolute
        transform scale(1.3)
        display block
        border 1px solid $gold-color
        transition all .2s ease
        opacity 0

    &__category
        text-align center

        input
            display none

            &:checked + div .filter__border
                left 10px
                right 10px
                top -10px
                bottom -10px
                transform scale(1)
                opacity 1

        span
            color white
            font-size 20px
            text-shadow 0px 0px 3px black

    &__radio
        {ibm}
        width 150px
        height 150px
        text-align center
        cursor pointer
        background-position center
        background-size cover
        position relative

        span
            position absolute
            top 105%
            left 50%
            transform translateX(-50%)
            width 80%

    &__item
        {ibt}
        width 100%
        font-weight 300

        @media (min-width 768px)
            width 48%

        &:not(:last-child)
            margin-bottom 20px

            @media (min-width 768px)
                margin-right 4%
                margin-bottom 0

        &:nth-child(2)
            @media (min-width 768px)
                text-align right

        span
            font-size 18px
            letter-spacing .1em
            width 120px

            @media (min-width 768px)
                width auto

        & span
            margin-right 22px
            {ibm}

        &>select
            {ibm}
            font-size 18px

        &_radio
            margin-bottom 25px
            height 36px

            label
                &:not(:last-child)
                    margin-right 18px

            input
                {ibm}
                width auto
                opacity 0
                position absolute

                & + span
                    {ibt}
                    position relative
                    margin-left 28px
                    hyphens()
                    color white
                    letter-spacing .12em
                    font-size 16px
                    transition all .15s ease


                    &:hover
                        cursor pointer

                    &:before
                        content ''
                        width 15px
                        height 15px
                        border 1px solid #888
                        background-color transparent
                        position absolute
                        left -28px
                        top 50%
                        transform translateY(-50%)
                        transition all .15s ease
                        border-radius 50%

                &:checked + span
                    color $gold-color
                    font-weight 700

                    &:before
                        background-color $gold-color
                        border-color $gold-color

                &:focus + span
                    &:before
                        outline-color $turquoise-color

.jq-selectbox
    &__select
        background $dark-color
        border 1px solid #969698
        box-shadow none
        border-radius 0
        color white
        text-shadow none
        font-family inherit
        font-weight 300
        letter-spacing .1em
        text-align left
        transition all .2s ease

        &:active
            box-shadow none

        &:hover
            background $dark-color
            border-color $gold-color

            .jq-selectbox__trigger-arrow
                border-top-color $gold-color

    &:hover
        background $dark-color
        border-color $gold-color

        .jq-selectbox__trigger-arrow
            border-top-color $gold-color

    &__trigger
        border-left none
        transition all .2s ease

    &__trigger-arrow
        transition all .2s ease

    &__dropdown
        background $dark-color
        border-color $gold-color
        border-radius 0
        margin-top -1px
        font-family inherit
        font-weight 300
        letter-spacing .12em
        text-align left

        li
            color white

    li
        &:hover
            background-color rgba(143, 127, 106, 0.3)

            li.selected
                background-color rgba(143, 127, 106, 0.7)

        &.sel
            background-color rgba(143, 127, 106, 0.7)

    &.opened, &.focused
        background $dark-color
        border-color $gold-color
        outline none

        .jq-selectbox__select
            border-color $gold-color

.slider-range-input
    {ibm}
    font-size 20px

.ui-slider
    max-width 330px
    margin-left 10px

    @media (min-width 768px)
        margin-left auto
        margin-right 10px

.ui-widget.ui-widget-content
    border none
    height 1px

.ui-slider-handle
    border-radius 50%
    margin-top -4px

    &:focus
        outline none

.ui-state-default, .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default, .ui-button, html .ui-button.ui-state-disabled:hover, html .ui-button.ui-state-disabled:active
    background $gold-color
    border none
    width 20px
    height 20px
