.article-page
    padding-bottom 100px
    position relative

    &__date
        position absolute
        right 10px
        top 0
        font-size 20px
        opacity .5

    h1
        font-size 24px
        font-weight 400
        margin-top 60px
        margin-bottom 60px
        text-transform uppercase
        letter-spacing .12em
        margin-right 130px

    h2
        font-size 20px
        margin-top 30px
        margin-bottom 30px
        font-weight 400
        text-transform uppercase
        letter-spacing .12em

    p
        font-size 16px
        letter-spacing .12em
        font-weight 300
        opacity .8

    a
        color $gold-color
        text-decoration none
        font-weight 700

        &:hover
            text-decoration underline

    ul, ol
        padding-left 0
        font-size 16px
        letter-spacing .12em
        font-weight 300
        margin-top 30px
        margin-bottom 30px
        list-style none

        li
            opacity .8

            &:not(:last-child)
                margin-bottom 10px

    ul
        li
            padding-left 20px
            position relative

            &:before
                content ''
                width 9px
                height 9px
                display block
                background-color $gold-color
                border-radius 50%
                left 0
                top 5px
                position absolute

    ol
        counter-reset section

        li
            &:before
                counter-increment section
                content counter(section) ". "
                color $gold-color

    img
        display block
        margin-left auto
        margin-right auto
        max-height 500px
        width auto
        max-width 100%
        margin-top 30px
        margin-bottom 30px
