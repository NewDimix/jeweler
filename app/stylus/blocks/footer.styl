.footer
    background-color $dark3-color
    padding-top 50px
    padding-bottom 15px
    font-size 0
    padding-left 8px
    padding-right 8px

    @media (min-width 768px)
        padding-top 65px
        padding-bottom 25px

    @media (min-width 992px)
        padding-top 75px
        padding-bottom 35px

    @media (min-width 1200px)
        padding-top 85px
        padding-bottom 45px

    &__menu
        {ibt}
        width 100%
        margin-bottom 40px

        @media (min-width 992px)
            margin-bottom 0
            width 35%
            margin-right 5%

        ul
            padding-left 0
            list-style none
            column-count 2

            @media (min-width 650px)
                column-count 3

            @media (min-width 992px)
                column-count 2

        li
            &:not(:last-child)
                margin-bottom 25px

        a
            font-size 18px
            letter-spacing .12em
            text-transform uppercase
            color white
            text-decoration none

            &:hover, &:focus
                outline none
                text-decoration underline

    &__title
        font-size 18px
        letter-spacing .12em
        text-transform uppercase
        color white
        margin-bottom 25px

        h2
            margin-top 0
            margin-bottom 0
            font-size inherit
            font-weight 400

    &__catalog
        width 50%
        margin-bottom 40px

        @media (min-width 650px)
            width 33%
            margin-bottom 0

        @media (min-width 992px)
            width 15%
            margin-right 5%

    &__services
        width 50%
        margin-bottom 40px

        @media (min-width 650px)
            width 33%
            margin-bottom 0

        @media (min-width 992px)
            width 15%
            margin-right 5%

    &__catalog, &__services
        {ibt}

        ul
            padding-left 0
            list-style none

        li
            &:not(:last-child)
                margin-bottom 15px

        a
            font-size 16px
            color white
            text-decoration none

            &:hover, &:focus
                outline none
                text-decoration underline

    &__contacts
        {ibt}

        @media (min-width 650px)
            width 33%

        @media (min-width 992px)
            width 20%

        .social__item
            width 22px
            height 22px

        li
            &:not(:last-child)
                margin-right 20px

    &__phone
        margin-bottom 25px

        a
            color $gold-color
            font-size 18px
            letter-spacing .12em
            text-decoration none
            transition all .1s ease
            display block

            &:hover, &:focus
                outline none
                text-decoration underline
